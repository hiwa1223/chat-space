.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group(data-group_id="7597")
        tokyo
      %ul.main-header__left-box__member-list
        %li.main-header__left-box__member-list__member
          member:hoge sake take 
    = link_to "Edit", "#", class: 'main-header__edit-btn'
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :name , class: 'form__text-message', placeholder: "type a messeage"
      = f.label :name, class: 'form__image-btn' do
        = icon("far", "image")
      = f.submit "Send", class:"form__send-btn"