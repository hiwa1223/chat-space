.messages__upper-message
  .messages__upper-message__user-name
    = message.user.name
  .messages__upper-message__date
    = message.created_at.strftime("%Y/%m/%d (%a) %H:%M:%S")
.messages__lower-message
  - if message.content.present?
    %p.messages__lower-message__content
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

  .message