.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new__group
          = link_to "https://www.facebook.com/", class: "side-header__box__menu__new__group " do
            = icon("fas", "edit", class: "new__btn--icon")
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog", class: "edit__btn--icon")
  .groups
    %p.group__group-name
      tokyo
    %p.group__latest-message
      ttt